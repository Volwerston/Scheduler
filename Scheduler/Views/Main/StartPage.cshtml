@using Scheduler.Models.Auxiliary;

@{
    ViewBag.Title = "StartPage";
    Layout = "~/Views/Shared/_LandingPageLayout.cshtml";
    int counter = 1;
}

@foreach (var el in (List<StartPageBlockData>)ViewBag.BlocksData)
{
    @Html.Partial("StartViewBlock",
    new ViewDataDictionary(){
        new KeyValuePair<string, object>("title", el.Title),
        new KeyValuePair<string, object>("description", el.Description),
        new KeyValuePair<string, object>("num", counter++),
        new KeyValuePair<string, object>("nextBlock", el.NextBlock),
        new KeyValuePair<string, object>("id", el.Id),
        new KeyValuePair<string, object>("arrowImageSrc", el.ArrowImageSrc)
    })
}

<div id="signInModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Login" id="usr">
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" placeholder="Password" id="pwd">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <button type="button" id="sign_in" class="btn custom-btn-success col col-md-2" data-dismiss="modal">Sign In</button>
                    <button type="button" id="forgot_password" class="btn custom-btn-success col col-md-4" data-dismiss="modal">Forgot password</button>
                    <button type="button" class="btn btn-default col col-md-2" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>

    </div>
</div>

<div id="loadingModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-2 col-sm-push-5">
                        <img src="~/Common/Images/ajax-loader.gif" style="display:inline;margin: auto" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">

        $(document).ready(function () {

            $(".infoUrlBlock").mouseout(function () {
                $(this).find(".infoUrl").fadeOut(500);
            });

            $(".infoUrlBlock").mouseover(function () {
                $(this).find(".infoUrl").fadeIn(500);
            });

            $("#forgot_password").click(function () {
                window.location = '@Url.Action("ChangePassword", "Main")';
            });

        });

    </script>

}