@model IEnumerable<Scheduler.Models.Custom.Message>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (Model.Count() > 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DialogueId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SenderMail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendingTime)
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DialogueId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SenderMail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendingTime)
        </td>
    </tr>
}

</table>
}
else
{
    <p style="text-align: center"> No messages were found.</p>
}
