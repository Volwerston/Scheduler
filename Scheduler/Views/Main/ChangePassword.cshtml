
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div style="display: table;margin: auto; background-color: white; border: 1px solid black; padding: 10px; margin-top: 10px;box-shadow: 10px 10px 5px #888888;">
        <div class="form-horizontal" style="padding: 20px;">
            <div class="form-group">
                <input name="email" class="form-control" placeholder="E-mail" type="email" />
            </div>
            <input type="submit" style="margin: auto" name="change_password" class="btn btn-success btn-block" value="Send email" />
        </div>
    </div>
}