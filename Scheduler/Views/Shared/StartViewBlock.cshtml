<div id="@ViewData["id"]" class="infoBlock" style="padding:10px;margin:0; background-color:@ViewData["colorName"]; width: 100%;">
    <div class="row">
        <div class="col col-sm-4 col-sm-push-1 infoTitle" style="min-height: 100px;margin: 10px;">
            <h1 style="font-family:Arial; color: white; text-align: center;">@ViewData["title"]</h1>
        </div>
        <div class="col col-sm-push-1 col-sm-6 infoDescription" style="min-height: 350px;margin: 10px;">
            <h3 style="font-family:Arial; color: white; text-align: center;">@ViewData["description"]</h3>
        </div>
    </div>
</div>